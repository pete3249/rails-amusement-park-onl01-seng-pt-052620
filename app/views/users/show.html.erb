<h1><%= @user.name %></h1>

<% if flash[:message] %>
  <div class="center alert">
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<ul>
    <li>Height: <%= @user.height %></li>
    <li>Tickets: <%= @user.tickets %></li>
    <% if @user.admin %>
        <p>"ADMIN"</p>
    <% else %>
        Mood: <%= @user.mood %></li>
    <% end %>
</ul>

<%= link_to "See attractions", attractions_path %>

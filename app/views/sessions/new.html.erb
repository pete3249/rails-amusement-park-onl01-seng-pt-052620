<%= form_tag('/signin') do %>

    <%= label_tag(:name, "Your name:") %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown") %><br>

    <%= label_tag(:user_password, "Your password:") %>
    <%= password_field_tag(:user_password, nil) %><br>

    <%= submit_tag("Sign In") %>

<% end %>